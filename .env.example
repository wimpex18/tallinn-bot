# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Perplexity API Key (get from https://www.perplexity.ai/settings/api)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Bot username without @ (e.g., tallinn_helper_bot)
BOT_USERNAME=your_bot_username_here

# Brave Search API Key (get from https://api-dashboard.search.brave.com/)
# Free tier: 2,000 requests/month, 1 request/sec
# Used for local queries (events, restaurants, places in Tallinn)
# Optional: bot works without it but will use Perplexity for all queries
BRAVE_API_KEY=your_brave_api_key_here

# For Render deployment only:
# RENDER=true
# WEBHOOK_URL=https://your-app-name.onrender.com
